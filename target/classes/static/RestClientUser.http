# add user: employee
###
POST http://localhost:8080/users/1
Content-Type: application/json
Authorization: Basic abc@gmail.com goodpassword

{
    "email": "def@gmail.com",
    "name": "employee b",
    "password": "goodpassword",
    "role": "developer",
    "authorities": "ROLE_USER"
}

# get users: by company id
###
GET http://localhost:8080/users/1
Accept: application/json

# reset user password
###
PUT http://localhost:8080/users/1/abc@gmail.com/resetPassword
Authorization: Basic abc@gmail.com goodpassword

# change user password
###
PUT http://localhost:8080/users/1/abc@gmail.com/changePassword
Content-Type: application/json
Authorization: Basic abc@gmail.com goodpassword

{
    "currentPassword": "goodpassword",
    "newPassword": "abcd123@"
}

# delete users: by user email and company id
###
DELETE http://localhost:8080/users/1/def@gmail.com